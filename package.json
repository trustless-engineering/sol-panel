{
	"name": "sol-panel",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"check-format": "pnpm prettier --check .",
		"check-lint": "pnpm eslint --ext .tsx,.ts .",
		"check-types": "tsc --pretty --noEmit",
		"db:migrate": "prisma migrate deploy",
		"db:reset": "prisma migrate reset --force",
		"db:seed": "prisma db seed",
		"dev:repl": "ts-node -r tsconfig-paths/register ./src/utils/repl.ts",
		"dev": "prisma generate && next dev",
		"format": "prettier --write .",
		"lint": "next lint",
		"prepare": "husky install",
		"start:prod": "pnpm run build && pnpm run start",
		"start": "next start",
		"test": "jest",
		"test:components": "cypress run --component",
		"test:e2e": "cypress run --e2e",
		"test-all": "pnpm run check-format && pnpm run check-lint && pnpm run check-types && pnpm run build",
		"worker:webhooks": "ts-node -r tsconfig-paths/register ./src/executors/webhooks.ts"
	},
	"dependencies": {
		"@kubernetes/client-node": "^0.18.1",
		"@prisma/client": "^4.16.2",
		"@solana/web3.js": "^1.77.3",
		"@tailwindcss/forms": "^0.5.3",
		"@tailwindcss/typography": "^0.5.9",
		"@typescript-eslint/parser": "^5.60.1",
		"daisyui": "^3.1.7",
		"dayjs": "^1.11.9",
		"faktory-worker": "^4.5.1",
		"next": "13.4.7",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-hook-form": "^7.45.1",
		"react-syntax-highlighter": "^15.5.0",
		"react-use-websocket": "^4.3.1",
		"redis": "^4.6.7",
		"swr": "^2.2.0",
		"ws": "^8.13.0"
	},
	"devDependencies": {
		"@jest/types": "^29.5.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@types/jest": "^29.5.2",
		"@types/node": "20.2.5",
		"@types/react": "18.2.14",
		"@types/react-dom": "18.2.4",
		"@types/react-syntax-highlighter": "^15.5.7",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"autoprefixer": "^10.4.14",
		"babel-jest": "^29.5.0",
		"cypress": "^12.16.0",
		"dotenv": "^16.3.1",
		"eslint": "^8.44.0",
		"eslint-config-next": "^13.4.7",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard-with-typescript": "^36.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.32.2",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.3",
		"postcss": "^8.4.24",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.3.0",
		"prisma": "^4.16.2",
		"rimraf": "^3.0.2",
		"semantic-release": "^21.0.6",
		"tailwindcss": "^3.3.2",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.6"
	},
	"engines": {
		"node": "^20.2.0"
	},
	"packageManager": "pnpm@8.6.6",
	"release": {
		"branches": [
			"main",
			{
				"name": "next",
				"prerelease": true
			}
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "*.tgz",
							"label": "Helm Chart"
						}
					]
				}
			]
		]
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "pnpm run test-all"
		}
	},
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{css,scss,less}": [
			"prettier --write"
		],
		"*.{json,md,yml,yaml}": [
			"prettier --write"
		]
	}
}
